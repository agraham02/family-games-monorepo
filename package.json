{
    "name": "family-games-monorepo",
    "version": "1.0.0",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "scripts": {
        "dev": "pnpm -r --parallel dev",
        "dev:client": "pnpm --filter client dev",
        "dev:api": "pnpm --filter api dev",
        "build": "pnpm -r build",
        "build:shared": "pnpm --filter @family-games/shared build",
        "build:client": "pnpm --filter client build",
        "build:api": "pnpm --filter api build",
        "test": "pnpm -r test",
        "lint": "pnpm -r lint",
        "clean": "pnpm -r clean"
    },
    "devDependencies": {
        "typescript": "^5.5.0"
    }
}
